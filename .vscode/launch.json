    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program 2",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/esm/perf_tests.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "args": [
                "-i",
                "--rootDir=${workspaceFolder}",
                "--color",
                "--config=./jest.config.ts"
            ],
            // "preLaunchTask": "build",
            "internalConsoleOptions": "openOnSessionStart",
            // "outFiles": [
            //     "${workspaceRoot}/dist/**/*"
            // ],
            "env": {
                "NODE_PATH": "$PWD"
            }
        },
    ]
}